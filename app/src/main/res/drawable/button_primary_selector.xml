<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/c400"
                android:endColor="@color/c400"
                android:centerColor="@color/colorAccent"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/divider" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/c400"
                android:endColor="@color/c400"
                android:centerColor="@color/c800"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/divider" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>